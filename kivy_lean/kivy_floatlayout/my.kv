<Button>:
    font_size:40
    color: 0.3,0.6,0.7,1
    size_hint: 0.3, 0.5

<FloatLayout>:
    Button:
        pos_hint: {"X":0.5,"top":1}
        text: "Kabangu"

    Button:
        id: btn
        post_hint: {"y":0.3}
        text: "Winner" if btn.state == "normal" else "Down"
        background_color: 0.3,.4,.5,1